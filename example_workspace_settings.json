//file name: settings.json
//file directory: placed within a '.vscode' directory at the root of a project

//note: these settings will over-ride the corresponding user settings, which can be found in:
//Windows: %APPDATA%\Code\User\settings.json
//MacOs: ~/Library/Application\ Support/Code/User/settings.json
//Linux: ~/.config/Code/User/settings.json

{
    //set Python interpreter (usually a Python virtual environment)
    "python.pythonPath": "../../envs/<name-of-venv>/bin/python",
}
